# Environment Configuration
ENV=qa

# Base URL
BASE_URL=https://www.saucedemo.com

# Browser Settings
BROWSER=chromium
HEADLESS=false
SLOW_MO=0

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000

# Recording Settings
RECORD_VIDEO=false
ENABLE_TRACING=true

# Retry Settings
MAX_RETRIES=2
RETRY_DELAY=1

# Credentials (NEVER commit actual credentials)
VALID_USERNAME=standard_user
VALID_PASSWORD=secret_sauce

# API Settings
API_BASE_URL=https://jsonplaceholder.typicode.com
API_TIMEOUT=10

# Mobile Testing - Appium Settings
APPIUM_SERVER_URL=http://localhost:4723
PLATFORM_NAME=Android
DEVICE_NAME=emulator-5554
APP_PACKAGE=com.example.app
APP_ACTIVITY=.MainActivity
AUTOMATION_NAME=UiAutomator2
BUNDLE_ID=com.example.app
UDID=

# Email Notification Settings
SEND_EMAIL_REPORT=false
SEND_EMAIL_ON_FAILURE=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password
RECEIVER_EMAILS=recipient1@example.com,recipient2@example.com

# Soft Assertions
USE_SOFT_ASSERT=true

# Parallel Execution
PARALLEL_WORKERS=4

# Screenshot Settings
SCREENSHOT_ON_FAILURE=true
FULL_PAGE_SCREENSHOT=true
